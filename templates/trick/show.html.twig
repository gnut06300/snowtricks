{% extends 'base.html.twig' %}

{% block title %}Hello Strick{% endblock %}

{% block body %}
<h1 id="tricks" class="text-center my-5">{{ trick.name }}</h1>
	
	<div class="row">
				<div class="col-lg-12">
				<div class="card shadow-lg">
					<img src="{{trick.picture}}" class="card-img-top" alt="Mute">
					<div class="card-body">
						<h5 class="card-title">{{trick.name}}</h5>
						<small class="bg-light">Post√© le {{ trick.createdAt | date('d/m/Y')}} -  <button type="button" class="btn btn-primary"> Categorie : {{ trick.category.title }}</button></small>
						<div class="row">
						{% for picture in trick.pictures %}
							<div class="col-lg-4 my-3">
							<img class="picturesTrick" src="{{ asset('uploads/' ~ picture.file ) }}" alt="image {{ trick.name }}">
							</div>
						{% endfor %}
						</div>
						<div class="row">
						{% for video in trick.videos %}
							<div class="col-lg-4 my-2">
								<div class="ratio ratio-16x9">
									<iframe src="{{ video.url }}" title="Video {{ trick.name }}" allowfullscreen></iframe>
								</div>
							</div>
						{% endfor %}
						</div>
						<p class="card-text">{{trick.description |  raw}}</p>
						
						{% if (app.user and app.user == trick.author) or is_granted('ROLE_ADMIN') %}
						<a href="{{ path('trick_edit', {'slug': trick.slug }) }}"><i class="fas fa-pencil-alt"></i></a>{{ include('trick/_delete_form.html.twig') }}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
{% endblock %}
