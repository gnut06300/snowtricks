{% extends 'base.html.twig' %}

{% block title %}Tricks
{% endblock %}

{% block body %}
	<h1 id="tricks" class="text-center my-5">Tricks</h1>
	<div class="row">
		{% for trick in tricks %}
			<div class="col-lg-2 mb-5">
				<div class="card shadow-lg">
					<img src="{{ trick.picture }}" class="card-img-top" alt="{{ trick.name}}">
					<div class="card-body">
						<h5 class="card-title">{{ trick.name}}
							<small>
								<a href="{{ path('trick_edit', {'slug': trick.slug }) }}">
									<i class="fas fa-pencil-alt"></i>
								</a>
								{{ include('trick/_delete_form.html.twig') }}</small>
						</h5>
						<small class="bg-light">Post√© le
							{{ trick.createdAt | date('d/m/Y')}}</small>
						<p class="card-text">{{ trick.description |slice(0, 50)|raw}}...</p>
						<a href="{{ path('trick_show', {'slug': trick.slug }) }}" class="btn btn-primary">En voir plus</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
